{
  "name": "url-redirecter",
  "private": true,
  "displayName": "Url Redirecter Extension",
  "version": "0.1.0",
  "description": "Chrome Extension that redirects urls by the one you've defined",
  "license": "MIT",
  "author": "Ilingu",
  "keywords": [
    "SolidJS",
    "Vite",
    "TypeScript",
    "ManifestV3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ilingu/url-redirecter.git"
  },
  "scripts": {
    "dev": "vite build -w",
    "build": "rm -rfv ./dist app.zip && vite build && zip app.zip ./dist",
    "lint": "eslint . --fix -c .eslintrc --ext js,ts --ignore-pattern='!.*'",
    "dev:nodemon": "nodemon",
    "build:noemit": "tsc --noEmit && vite build"
  },
  "type": "module",
  "dependencies": {
    "chrome": "^0.1.0",
    "solid-js": "^1.4.8"
  },
  "devDependencies": {
    "@types/chrome": "0.0.193",
    "@types/node": "18.6.3",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "babel-preset-solid": "^1.4.8",
    "eslint": "8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-solid": "^0.7.1",
    "fs-extra": "10.1.0",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "sass": "1.54.0",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "vite": "3.0.4",
    "vite-plugin-solid": "^2.3.0"
  }
}
